@require '../_variables.styl';

/*
 * Circle progress
*/

.circle-progress
  width preloader-spinner-size
  height preloader-spinner-size
  position relative
  text-align center
  display block
  left 50%
  right 0
  margin-left -(preloader-spinner-size/2)

  z-index 20
  opacity 0
  transition opacity 0.65s ease
  background-color #fff
  border-radius 50%

  &.center
      top 50%
      left 50%
      margin-top -(preloader-spinner-size/2)
      position absolute

  &.active

    opacity 1

    .spinner
      position relative
      display block
      width 100%
      height 100%
      border-radius 50%
      border-top 3px solid primary
      border-right 3px solid primary
      border-bottom 3px solid primary
      border-left 3px solid preloader-spinner-background
      animation circleLoading 900ms infinite linear

  &.primary, &.negative, &.positive
    background-color #fff !important

  &.primary
    .spinner
      border-top 3px solid primary
      border-right 3px solid primary
      border-bottom 3px solid primary

  &.negative
    .spinner
      border-top 3px solid negative
      border-right 3px solid negative
      border-bottom 3px solid negative

  &.positive
    .spinner
      border-top 3px solid positive
      border-right 3px solid positive
      border-bottom 3px solid positive

@keyframes circleLoading
  0%
    transform rotate(0deg) translateZ(0)
  100%
    transform rotate(360deg) translateZ(0)

.progress
  position relative
  left 0
  right 0
  z-index 20
  height preloader-bar-height
  display none
  width 100%
  background-color rgba(255, 255, 255, 0.40)
  border-radius 2px
  background-clip padding-box
  overflow hidden

  &.active
    display block

  .determinate
    position absolute
    top 0
    bottom 0
    background-color primary // default
    transition width 0.2s linear

  &.primary
    .determinate
      background-color dark-primary !important

  &.negative
    .determinate
      background-color dark-negative !important

  &.positive
    .determinate
      background-color dark-positive !important
